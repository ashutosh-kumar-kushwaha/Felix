<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#070E1E"
    tools:context=".SignUpFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#070E1E">

        <TextView
            android:id="@+id/registerTxtVw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_33"
            android:text="Register Now"
            android:fontFamily="@font/montserrat"
            android:textSize="@dimen/sp_25"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/nameLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/dp_21"
            app:layout_constraintTop_toBottomOf="@+id/registerTxtVw"
            app:layout_constraintEnd_toEndOf="parent">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="@dimen/dp_12">

                <TextView
                    android:id="@+id/firstNameTxtVw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_3"
                    android:fontFamily="@font/montserrat"
                    android:text="First Name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_13" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/firstNameETxtLayout"
                    android:layout_width="@dimen/dp_124"
                    android:layout_height="wrap_content"
                    app:passwordToggleEnabled="false"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/firstNameETxt"
                        android:layout_width="@dimen/dp_124"
                        android:layout_height="@dimen/dp_45"
                        android:background="@drawable/textbox_background"
                        android:ems="10"
                        android:textSize="@dimen/sp_12"
                        android:inputType="textPersonName"
                        android:textCursorDrawable="@null"
                        android:paddingStart="@dimen/dp_10"
                        android:paddingEnd="@dimen/dp_10"
                        android:textColor="@color/white"
                        android:fontFamily="@font/montserrat"/>
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/lastNameTxtVw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_3"
                    android:fontFamily="@font/montserrat"
                    android:text="Last Name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_13"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/lastNameETxtLayout"
                    android:layout_width="@dimen/dp_124"
                    android:layout_height="wrap_content"
                    app:passwordToggleEnabled="false"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/lastNameETxt"
                        android:layout_width="@dimen/dp_124"
                        android:layout_height="@dimen/dp_45"
                        android:background="@drawable/textbox_background"
                        android:ems="10"
                        android:textSize="@dimen/sp_12"
                        android:inputType="textPersonName"
                        android:textCursorDrawable="@null"
                        android:paddingStart="@dimen/dp_10"
                        android:paddingEnd="@dimen/dp_10"
                        android:textColor="@color/white"
                        android:fontFamily="@font/montserrat"/>
                </com.google.android.material.textfield.TextInputLayout>

            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>



        <TextView
            android:id="@+id/emailTxtVw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_3"
            android:fontFamily="@font/montserrat"
            android:text="Email"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13"
            app:layout_constraintBottom_toTopOf="@+id/emailETxtLayout"
            app:layout_constraintStart_toStartOf="@+id/emailETxtLayout" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/emailETxtLayout"
            android:layout_width="@dimen/dp_260"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_29"
            app:passwordToggleEnabled="false"
            app:hintEnabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nameLinearLayout" >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/emailETxt"
                android:layout_width="@dimen/dp_260"
                android:layout_height="@dimen/dp_45"
                android:layout_marginTop="@dimen/dp_29"
                android:background="@drawable/textbox_background"
                android:ems="10"
                android:textSize="@dimen/sp_12"
                android:inputType="textEmailAddress"
                android:textCursorDrawable="@null"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/password1TxtVw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_3"
            android:fontFamily="@font/montserrat"
            android:text="Password"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13"
            app:layout_constraintBottom_toTopOf="@+id/password1ETxtLayout"
            app:layout_constraintStart_toStartOf="@+id/password1ETxtLayout" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password1ETxtLayout"
            android:layout_width="@dimen/dp_260"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_29"
            app:passwordToggleEnabled="true"
            app:hintEnabled="false"
            app:passwordToggleDrawable="@drawable/show_hide_password"
            app:passwordToggleTint="@color/white"
            app:helperTextTextAppearance="@style/TextLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/emailETxtLayout" >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password1ETxt"
                android:layout_width="@dimen/dp_260"
                android:layout_height="@dimen/dp_45"
                android:layout_marginTop="@dimen/dp_29"
                android:background="@drawable/textbox_background"
                android:ems="10"
                android:inputType="textPassword"
                android:textCursorDrawable="@null"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/password2TxtVw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_3"
            android:fontFamily="@font/montserrat"
            android:text="Confirm Password"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13"
            app:layout_constraintBottom_toTopOf="@+id/password2ETxtLayout"
            app:layout_constraintStart_toStartOf="@+id/password2ETxtLayout" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password2ETxtLayout"
            android:layout_width="@dimen/dp_260"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_29"
            app:passwordToggleEnabled="true"
            app:hintEnabled="false"
            app:passwordToggleDrawable="@drawable/show_hide_password"
            app:passwordToggleTint="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:helperTextTextAppearance="@style/TextLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/password1ETxtLayout" >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/password2ETxt"
            android:layout_width="@dimen/dp_260"
            android:layout_height="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_29"
            android:background="@drawable/textbox_background"
            android:ems="10"
            app:helperTextTextAppearance="@style/TextLabel"
            android:inputType="textPassword"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10"
            android:textCursorDrawable="@null"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat"/>
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/createAccBtn"
            android:layout_width="@dimen/dp_260"
            android:layout_height="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_21"
            android:background="@drawable/buttonbackground"
            android:fontFamily="@font/montserrat"
            android:text="Create Account"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/password2ETxtLayout" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:fontFamily="@font/montserrat"
            android:text="Already have an account?"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"
            app:layout_constraintStart_toStartOf="@+id/createAccBtn"
            app:layout_constraintTop_toBottomOf="@+id/createAccBtn" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_4"
            android:fontFamily="@font/montserrat_bold"
            android:onClick="logInFrag"
            android:text="Sign In"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintTop_toTopOf="@+id/textView5" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="@dimen/dp_21"
            android:layout_height="@dimen/dp_21"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/dp_10"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>